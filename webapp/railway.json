{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPath": "nixpacks.toml"
  },
  "deploy": {
    "startCommand": "cd .next/standalone && HOSTNAME=\"0.0.0.0\" PORT=${PORT} node server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
