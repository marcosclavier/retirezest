# RetireZest Environment Variables
# Copy this file to .env.local and fill in your values

# Database Configuration
# For development: SQLite
DATABASE_URL="file:./prisma/dev.db"
# For production: PostgreSQL with Neon (or any PostgreSQL provider)
# DATABASE_URL="postgresql://username:password@your-project.postgres.neon.tech/retirezest?sslmode=require"

# Authentication (REQUIRED - Generate with: openssl rand -base64 32)
# MUST be at least 32 characters long
JWT_SECRET=""

# CSRF Protection (Optional - uses JWT_SECRET if not set)
# CSRF_SECRET=""

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Email Configuration (Required for password reset)
# Sign up at https://resend.com to get an API key
RESEND_API_KEY=""
# Optional: Custom from email (must be from a verified domain in Resend)
# EMAIL_FROM="noreply@yourdomain.com"

# Cloudflare Turnstile (Required for login and registration)
# Get your keys at https://dash.cloudflare.com/
# For local development, use these test keys (always pass):
# NEXT_PUBLIC_TURNSTILE_SITE_KEY="1x00000000000000000000AA"
# TURNSTILE_SECRET_KEY="1x0000000000000000000000000000000AA"
NEXT_PUBLIC_TURNSTILE_SITE_KEY=""
TURNSTILE_SECRET_KEY=""

# Monitoring (Production only)
# Sign up at https://sentry.io to get these
# SENTRY_DSN=""
# NEXT_PUBLIC_SENTRY_DSN=""
